rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Función para verificar si el usuario es admin
    function isAdmin() {
      return request.auth != null && 
             (request.auth.token.email == 'ruiznutricionapp@gmail.com' ||
              request.auth.token.email == 'admin@admin.es');
    }
    
    // Regla para imágenes de menús
    match /menu-images/{userId}/{fileName} {
      // Permitir lectura y escritura a cualquier usuario autenticado
      // (Los admins estarán autenticados y podrán subir imágenes para cualquier usuario)
      allow read, write: if request.auth != null;
    }
    
    // Reglas para archivos de usuarios (ejercicios, recetas, etc.)
    match /users/{userId}/{folder}/{fileName} {
      // Los usuarios pueden leer sus propios archivos
      // Los admins pueden leer y escribir cualquier archivo
      allow read, get: if request.auth != null && 
                     (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && isAdmin();
    }
    
    // Permitir listar archivos en las carpetas de usuarios
    match /users/{userId}/{folder} {
      allow list: if request.auth != null && 
                     (request.auth.uid == userId || isAdmin());
    }
    
    // Reglas para imagen de tarifas
    match /tarifas/{fileName} {
      // Todos los usuarios autenticados pueden ver las tarifas
      allow read: if request.auth != null;
      // Solo los admins pueden subir/modificar las tarifas
      allow write: if request.auth != null && isAdmin();
    }
    
    // Reglas para todos los recursos (GYM, mensajes, etc.)
    match /recursos/{fileName} {
      // Todos los usuarios autenticados pueden leer los archivos
      allow read: if request.auth != null;
      // Solo los admins pueden subir/modificar/eliminar archivos
      allow write: if request.auth != null && isAdmin();
    }
    
    // Reglas para carpeta GYM con todas sus subcarpetas
    match /gym/{allPaths=**} {
      // Todos los usuarios autenticados pueden leer
      allow read: if request.auth != null;
      // Solo los admins pueden escribir
      allow write: if request.auth != null && isAdmin();
    }
    
    // Reglas para fotos de dieta
    match /dietaFotos/{userId}/{fileName} {
      // Los usuarios pueden leer sus propias fotos
      // Los admins pueden leer cualquier foto
      allow read: if request.auth != null && 
                     (request.auth.uid == userId || isAdmin());
      // Solo los admins pueden escribir y eliminar fotos
      allow write, delete: if request.auth != null && isAdmin();
    }
    
    // Reglas para carpeta Recetas con todas sus subcarpetas
    match /recetas/{allPaths=**} {
      // Todos los usuarios autenticados pueden leer
      allow read: if request.auth != null;
      // Solo los admins pueden escribir
      allow write: if request.auth != null && isAdmin();
    }
    
    // Denegar acceso por defecto a otras rutas
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
