rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Funci贸n para verificar si el usuario es admin
    function isAdmin() {
      return request.auth != null && 
             (request.auth.token.email == 'ruiznutricionapp@gmail.com' ||
              request.auth.token.email == 'admin@admin.es' ||
              request.auth.token.admin == true);
    }
    
    // Colecci贸n de usuarios - acceso completo para admins
    match /users/{userId} {
      // Los usuarios autenticados pueden leer su propia informaci贸n
      // Los admins pueden leer cualquier usuario
      allow read: if request.auth != null && 
                     (request.auth.uid == userId || isAdmin());
      
      // Los usuarios pueden actualizar su propia informaci贸n
      // Los admins pueden actualizar cualquier usuario
      allow write: if request.auth != null && 
                      (request.auth.uid == userId || isAdmin());
    }
    
    // Permitir a los admins listar todos los usuarios
    match /users/{document=**} {
      allow list: if isAdmin();
    }
    
    // Otras colecciones
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
