rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Función para verificar si el usuario es admin
    function isAdmin() {
      return request.auth != null && 
             (request.auth.token.email == 'ruiznutricionapp@gmail.com' ||
              request.auth.token.email == 'admin@admin.es' ||
              request.auth.token.admin == true);
    }
    
    // Colección de usuarios - acceso completo para admins
    match /users/{userId} {
      // Los usuarios autenticados pueden leer su propia información
      // Los admins pueden leer cualquier usuario
      allow read: if request.auth != null && 
                     (request.auth.uid == userId || 
                      request.auth.token.email == 'ruiznutricionapp@gmail.com' ||
                      request.auth.token.email == 'admin@admin.es');
      
      // Los usuarios pueden actualizar su propia información
      // Los admins pueden actualizar cualquier usuario
      allow write: if request.auth != null && 
                      (request.auth.uid == userId || 
                       request.auth.token.email == 'ruiznutricionapp@gmail.com' ||
                       request.auth.token.email == 'admin@admin.es');
      
      // Subcolección de mensajes - los usuarios pueden leer y actualizar sus propios mensajes
      match /mensajes/{mensajeId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
        allow create: if request.auth != null && isAdmin();
      }
    }
    
    // Permitir a los admins listar todos los usuarios
    match /users/{document=**} {
      allow list: if isAdmin();
    }
    
    // Colección de items de menú - solo admins pueden gestionar
    match /menuItems/{categoria}/items/{itemId} {
      allow read: if request.auth != null; // Todos los autenticados pueden leer
      allow write: if isAdmin(); // Solo admins pueden escribir
    }
    
    // Colección de usuarios (nueva estructura)
    match /usuarios/{userId} {
      // Los usuarios pueden leer su propia información
      // Los admins pueden leer cualquier usuario
      allow read: if request.auth != null && 
                     (request.auth.uid == userId || isAdmin());
      
      // Solo admins pueden escribir
      allow write: if isAdmin();
    }
    
    // Colección de mensajes para admin - usuarios autenticados pueden crear, solo admin puede leer
    match /mensajes_admin/{mensajeId} {
      allow read: if isAdmin();
      allow create: if request.auth != null; // Usuarios autenticados pueden crear solicitudes
      allow update, delete: if isAdmin();
    }
    
    // Colección de emails - usuarios autenticados pueden crear (para envío de notificaciones)
    match /mail/{mailId} {
      allow read: if isAdmin();
      allow create: if request.auth != null; // Usuarios autenticados pueden crear emails
      allow update, delete: if isAdmin();
    }
    
    // Otras colecciones - solo admins
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
