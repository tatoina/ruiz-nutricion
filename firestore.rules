rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Función para verificar si el usuario es admin
    function isAdmin() {
      return request.auth != null && 
             (request.auth.token.email == 'ruiznutricionapp@gmail.com' ||
              request.auth.token.email == 'admin@admin.es' ||
              request.auth.token.admin == true ||
              (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rol == 'admin'));
    }
    
    // Colección de usuarios - acceso completo para admins
    match /users/{userId} {
      // Los usuarios autenticados pueden leer su propia información
      // Los admins pueden leer cualquier usuario
      allow read: if request.auth != null && 
                     (request.auth.uid == userId || 
                      request.auth.token.email == 'ruiznutricionapp@gmail.com' ||
                      request.auth.token.email == 'admin@admin.es');
      
      // Los usuarios pueden actualizar su propia información EXCEPTO el campo 'rol'
      // Solo admins pueden modificar cualquier campo, incluyendo 'rol'
      allow update: if request.auth != null && (
        // Si es admin, puede actualizar todo
        isAdmin() ||
        // Si es el propio usuario, solo puede actualizar si NO cambia el campo 'rol'
        (request.auth.uid == userId && 
         (!request.resource.data.keys().hasAny(['rol']) || 
          request.resource.data.rol == resource.data.rol))
      );
      
      // Solo admins pueden crear usuarios
      allow create: if isAdmin();
      
      // Solo admins pueden eliminar usuarios
      allow delete: if isAdmin();
      
      // Subcolección de mensajes - los usuarios pueden leer y actualizar sus propios mensajes
      match /mensajes/{mensajeId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
        allow create: if request.auth != null && isAdmin();
      }
      
      // Subcolección de metadata de fotos de dieta
      match /dietaFotos/{docId} {
        // Los usuarios pueden leer sus propias fotos
        // Los admins pueden leer y escribir cualquier foto
        allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
        allow write: if request.auth != null && isAdmin();
      }
    }
    
    // Permitir a los admins listar todos los usuarios
    match /users/{document=**} {
      allow list: if isAdmin();
    }
    
    // Colección de items de menú - solo admins pueden gestionar
    match /menuItems/{categoria}/items/{itemId} {
      allow read: if request.auth != null; // Todos los autenticados pueden leer
      allow write: if isAdmin(); // Solo admins pueden escribir
    }
    
    // Colección de usuarios (nueva estructura)
    match /usuarios/{userId} {
      // Los usuarios pueden leer su propia información
      // Los admins pueden leer cualquier usuario
      allow read: if request.auth != null && 
                     (request.auth.uid == userId || isAdmin());
      
      // Solo admins pueden escribir
      allow write: if isAdmin();
    }
    
    // Colección de mensajes para admin - usuarios autenticados pueden crear, solo admin puede leer
    match /mensajes_admin/{mensajeId} {
      allow read: if isAdmin();
      allow create: if request.auth != null; // Usuarios autenticados pueden crear solicitudes
      allow update, delete: if isAdmin();
    }
    
    // Colección de emails - usuarios autenticados pueden crear (para envío de notificaciones)
    match /mail/{mailId} {
      allow read: if isAdmin();
      allow create: if request.auth != null; // Usuarios autenticados pueden crear emails
      allow update, delete: if isAdmin();
    }
    
    // Colección de recetas - usuarios autenticados pueden leer, solo admins pueden escribir
    match /recetas/{recetaId} {
      allow read: if request.auth != null; // Todos los autenticados pueden leer recetas
      allow write: if isAdmin(); // Solo admins pueden crear/editar/eliminar
    }
    
    // Colección de categorías de recetas - usuarios autenticados pueden leer, solo admins pueden escribir
    match /recetasCategorias/{categoriaId} {
      allow read: if request.auth != null; // Todos los autenticados pueden leer categorías
      allow write: if isAdmin(); // Solo admins pueden crear/editar/eliminar
    }
    
    // Otras colecciones - solo admins
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
